<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginTop="120dp">

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_play"
        android:textSize="24sp"
        android:width="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        style="@android:style/Widget.Button" />

    <TextView
        android:id="@+id/totalTextView"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="@string/initial_total"
        android:textSize="24sp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/cardButton1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/totalTextView"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="@string/initial_card_value"
        android:textSize="24sp"
        style="@android:style/Widget.Button" />

    <Button
        android:id="@+id/cardButton2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/cardButton1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/initial_card_value"
        android:textSize="24sp"
        style="@android:style/Widget.Button" />

    <Button
        android:id="@+id/cardButton3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/cardButton2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/initial_card_value"
        android:textSize="24sp"
        style="@android:style/Widget.Button" />

    <Button
        android:id="@+id/cardButton4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/cardButton3"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/initial_card_value"
        android:textSize="24sp"
        style="@android:style/Widget.Button" />

    <Button
        android:id="@+id/dealButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deal_button_text"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cardButton4"
        android:layout_marginTop="40dp"
        style="@android:style/Widget.Button" />

</RelativeLayout>
